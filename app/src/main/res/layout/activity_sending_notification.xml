<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wezen.madisonpartner.notification.SendingNotificationActivity"
    android:background="@color/primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarNotification"
            android:layout_centerInParent="true"
            />

        <LinearLayout
            android:id="@+id/orderSentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/sending_notification_image_width"
                android:layout_height="@dimen/sending_notification_image_height"
                app:srcCompat="@drawable/ic_tag_faces_white_24dp"
               />
            <TextView
                android:id="@+id/textview_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_sent"
                android:layout_marginTop="@dimen/order_sent_margin_image"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/order_sent_text"
                android:gravity="center"/>
            <Button
                android:id="@+id/notificationGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_marginTop="@dimen/order_sent_margin_image"/>

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>
